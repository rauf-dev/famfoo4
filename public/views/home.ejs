<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/navbar') %>

        <!-- TEST NEW CENTERED HERO -->
        <section class="hero-logo-section">
            <div class="hero-logo-container container">
                <div class="hero-logo row align-items-center justify-content-center">
                    <div class="col text-center">
                        <img class="d-block mx-auto mb-2" src="/assets/dinner-256.svg" alt="" width="128" height="128">
                        <h1 class="logo-title display-3 fw-bold px-4">SANAMEALS.COM</h1>
                        <p class="lead mb-4 px-4">simplify meal planning</p>
                    </div>
                </div>
                <img class="arrow-down" src="https://img.icons8.com/ios-filled/100/000000/down--v2.png" />
            </div>
            <div class="custom-shape-divider-bottom-1654005556">
                <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120"
                    preserveAspectRatio="none">
