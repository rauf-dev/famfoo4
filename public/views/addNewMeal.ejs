<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/navbar') %>
        <!-- BREADCRUMB -->
        <nav class="small" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Library</li>
            </ol>
        </nav>

        <!-- ADD NEW MEAL FORM -->
        <section class="section-template section-template__fullHeightSection">
            <!-- <section class="section-template section-addMeal-addMealForm"> -->
            <h2 class="mb-4">Add New Meal</h2>
            <div class="mb-3">
                <label class="form-label" for="image_uploads">Take a photo or select existing</label>
                <div id="mealImageHelp" class="form-text">A picture is mandatory.</div>
                <input type="file" class="form-control" id="image_uploads" name="image_uploads" accept="">
            </div>
            <form action="/meals/new" method="POST" id="uploadMulterForm" class="needs-validation newMealForm">
                <div class="mb-3 div-mealName">
                    <label for="mealName" class="form-label">Meal Name</label>
                    <div id="mealNameHelp" class="form-text">Mandatory field. Short name of the meal.</div>
                    <input type="text" class="form-control" id="mealName" aria-describedby="inputMealName">
                </div>
                <div class="mb-3 divMealDescription">
                    <label for="mealDesription" class="form-label">Short Description</label>
                    <div id="mealDescriptionHelp" class="form-text">Optional field.</div>
                    <textarea id="mealDescription" class="form-control" aria-label="With textarea"></textarea>

                </div>
                <label for="mealName" class="form-label">Select Meal Category</label>
                <div id="div-mealCategory" class="form-text mealCategoryHelp">Mandatory field. Select one category.
                </div>
                <div class="form-check radioSelectsMealCategory">
                    <input class="form-check-input" type="radio" name="mealCategory" id="mealCategoryMains"
                        value="mains" checked>
                    <label class="form-check-label" for="mealCategoryMains">
                        Mains
                    </label>
                </div>
                <div class="form-check radioSelectsMealCategory">
                    <input class="form-check-input" type="radio" name="mealCategory" id="mealCategoryBreakfast"
                        value="breakfast">
                    <label class="form-check-label" for="mealCategoryBreakfast">
                        Breakfast
                    </label>
                </div>
                <div class="form-check radioSelectsMealCategory mb-4">
                    <input class="form-check-input" type="radio" name="mealCategory" id="mealCategoryBreakfast"
                        value="snacks">
                    <label class="form-check-label" for="mealCategoryBreakfast">
                        Snacks
                    </label>
                </div>
                <div class="mb-4 text-center section-template__fullHeightSection__oneButton">
                    <input class="btn btn-primary btn-lg px-4 me-md-2" id="submitNewMeal" type="submit"
                        value="Submit" />
                    <a href="/meals/newMealPage" class="btn btn-light btn-lg px-4 me-md-2">Reset Form
                    </a>
                </div>
                <!-- hidden input for multer filenames transit to imagekit -->
                <div class="hiddenInputs">
                    <input type="hidden" class="hiddenMulterFileData" id="multerFilenameInput"
                        name="multerFilenameInput" />
                    <input type="hidden" class="hiddenMulterFileData" id="multerFilePathInput"
                        name="multerFilePathInput" />
                </div>
            </form>
        </section>

        <!-- FOOTER -->
        <%- include('partials/footer') %>

            <!-- SCRIPTS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>
            <script src="/scripts/imageUploaderMulter.js"></script>
            <script>
                console.log("Hello")
            </script>

</body>

</html>